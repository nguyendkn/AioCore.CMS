@page "/category"
@using AioCore.Shared.Common
@using AioCore.Services

@switch (_deviceType)
{
    case DeviceType.Desktop:
        <AioCore.Web.Pages.DesktopPages.Category></AioCore.Web.Pages.DesktopPages.Category>
        break;
    case DeviceType.Mobile:
        <AioCore.Web.Pages.MobilePages.Category></AioCore.Web.Pages.MobilePages.Category>
        break;
}

@code {

    [Inject]
    public IClientService ClientService { get; set; } = default!;

    private DeviceType _deviceType = DeviceType.Undefined;

    protected override Task OnInitializedAsync()
    {
        _deviceType = ClientService.GetDeviceType();
        return base.OnInitializedAsync();
    }

}